<table class="table">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% customers.each do |customer| %>
    <tr>
      <td class="info col-xs-1"><%= customer.id %></td>
      <td class="text-left"><%=customer.email %></td>
      <td class="col-xs-2">
        <% if customer.is_deleted == true %>
          <p class="text-secondary">退会済み</p>
        <% else %>
          <p class="text-success">有効</p>
        <% end %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>