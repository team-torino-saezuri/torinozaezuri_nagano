<% provide(:title, "ジャンル一覧") %>

<div class="container">
  <div class="row text-center">
    <div class="col-md-12 mt-5">
      <h2>ジャンル一覧・追加</h2>
    </div>
  </div>
  <div class="row ,y-5 d-flex justify-content-center">
    <div class="col-xs-12">
      <%= form_with model: @genre, url: admin_genres_path, method: :post, remote: true do |f| %>
        <%= f.label :name, "ジャンル名" %>
        <%= f.text_field :name, id: "form" %>
        <%= f.submit "追加する", class:"btn btn-success ml-4 py-1" %>
      <% end %>
    </div>
  </div>
  <div class="row mt-5 justify-content-center">
    <table class="col-lg-5 mt-3">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody id="genre_index_new">
        <%= render "genre_new", genre: @genres %>
      </tbody>
    </table>
  </div>
  <div class="text-right">
    <%= link_to "トップページへ", admin_path, class:"btn btn-light" %>
  </div>
</div>