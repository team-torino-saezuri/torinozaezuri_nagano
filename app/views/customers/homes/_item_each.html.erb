<div class="col-sm-6 col-md-3">
  <div class="card w-100 bg-transparent border", style="width: 18rem;">
    <%= link_to item_path(item) do %>
      <div class="img-wrap">
        <%= attachment_image_tag(item, :image, width: "100%", height: "200px", fallback: "no_image.jpg") %>
      </div>
    <% end %>
    <div class="card-body">
      <p class="card-text"><u><%= item.name %></u></p>
      <% if item.is_active == true %>
        <p class="card-text"><%= item.price.to_s(:delimited, delimiter:",") %>円(税抜)</p>
      <% else %>
        <p class="card-text text-danger">販売停止中</p>
      <% end %>
    </div>
  </div>
</div>